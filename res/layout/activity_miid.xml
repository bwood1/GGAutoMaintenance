<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MIIDActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Maintenance Item Description"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/miidDisplay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="___"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textDateOfNextService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textMilesTillNextService"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="DONS \n11/11/1111" />

    <TextView
        android:id="@+id/textMilesTillNextService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewDateofLastService"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="MTNS \n888888" />

    <TextView
        android:id="@+id/textViewDateofLastService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMileageOfLastService"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="DOLS \n11/11/1111" />

    <TextView
        android:id="@+id/textViewMileageOfLastService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMilesDrivenSinceServ"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="MOLS \n888888" />

    <TextView
        android:id="@+id/textViewMilesDrivenSinceServ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recordMaintButton"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/roundback"
        android:gravity="center"
        android:text="MDSS \n888888" />
    
    <Button
        android:id="@+id/recordMaintButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/helpButtonMIID"
        android:layout_centerHorizontal="true"
        android:onClick=""
        android:text="Record Maintenance" />
    
    <Button
        android:id="@+id/helpButtonMIID"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="helpMessage"
        android:text="Help" />

</RelativeLayout>