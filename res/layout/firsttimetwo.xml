<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/firstHelpText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Maintenance Item Setup"
        android:textSize="18dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/firstHelpText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="To get the most accurate notifications on maintenance that is due you will need to set mileage and date of the last maintenance performed for each item.  If you want to do this press Enter Info to begin entering each item. (Recommended)"
        android:textSize="17dp" />
    
    <TextView
        android:id="@+id/firstHelpText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="If you don&apos;t have records of maintenance, or you don&apos;t feel like taking the time, press Set Default. This will use your current mileage and today&apos;s date for all items.  This is quicker, but it assumes maintenance is performed today so some maintenance may be delayed longer than recommended."
        android:textSize="17dp" />
    
    <RelativeLayout 
      android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <Button
	        android:id="@+id/setDefaultButton"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_gravity="right"
	        android:onClick="setDefaultButton"
	        android:text="Set Default" />

        <Button
            android:id="@+id/enterInfoButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="enterInfoButton"
            android:text="Enter Info" />
        
    </RelativeLayout>



</LinearLayout>