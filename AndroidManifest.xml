<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ggcautomaintenance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/carmaintenanceicon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen" >
        <activity
            android:name="com.ggcautomaintenance.Main"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ggcautomaintenance.MilesPerGallonActivity"
            android:label="@string/title_activity_miles_per_gallon"
            android:parentActivityName="com.ggcautomaintenance.Main" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ggcautomaintenance.Main" />
        </activity>
        <activity
            android:name="com.ggcautomaintenance.ShowMaintenanceActivity"
            android:label="@string/title_activity_show_maintenance"
            android:parentActivityName="com.ggcautomaintenance.Main" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ggcautomaintenance.Main" />
        </activity>
        <activity
            android:name="com.ggcautomaintenance.MIIDActivity"
            android:label="@string/title_activity_miid"
            android:parentActivityName="com.ggcautomaintenance.ShowMaintenanceActivity" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ggcautomaintenance.ShowMaintenanceActivity" />
        </activity>
    </application>

</manifest>